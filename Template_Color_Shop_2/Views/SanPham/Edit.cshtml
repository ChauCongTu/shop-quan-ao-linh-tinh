@model Template_Color_Shop_2.Models.SanPham

@{
    ViewBag.Title = "Edit";
}
<div class="container mt-5">
    @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new {enctype = "multipart/form-data"}))
