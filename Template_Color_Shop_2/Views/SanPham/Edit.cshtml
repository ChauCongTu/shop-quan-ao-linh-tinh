                    @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaPhanLoai, "Phân loại chính", htmlAttributes: new { @class = "control-label col-md-2" })
